<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSettingSelectedBg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_thirty"
        android:layout_marginStart="@dimen/margin_forty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bsm_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bt_setting_font_size"
            android:gravity="center"
            android:layout_alignTop="@+id/switch_one"
            android:layout_alignBottom="@+id/switch_one"
            android:text="@string/label_bsm_one" />

        <ToggleButton
            android:id="@+id/switch_one"
            android:layout_width="@dimen/bt_setting_toggle_width"
            android:layout_height="@dimen/bt_setting_toggle_height"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="@drawable/switch_selector"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/bsm_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsm_one"
            android:gravity="center"
            android:text="@string/label_bsm_two"
            android:layout_alignBottom="@+id/switch_two"
            android:layout_alignTop="@+id/switch_two"
            android:textSize="@dimen/bt_setting_font_size" />

        <ToggleButton
            android:id="@+id/switch_two"
            android:layout_width="@dimen/bt_setting_toggle_width"
            android:layout_height="@dimen/bt_setting_toggle_height"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/switch_one"
            android:gravity="center"
            android:background="@drawable/switch_selector"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>