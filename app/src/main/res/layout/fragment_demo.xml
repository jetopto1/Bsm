<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSettingSelectedBg">


    <TextView
        android:id="@+id/enable_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/label_demo_mode"
        android:textColor="@android:color/white"
        android:textSize="@dimen/brightness_content_font_size"
        app:layout_constraintBottom_toBottomOf="@id/demo_switch"
        app:layout_constraintEnd_toStartOf="@id/demo_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/demo_switch" />

    <ToggleButton
        android:id="@+id/demo_switch"
        android:layout_width="@dimen/bt_setting_toggle_width"
        android:layout_height="@dimen/bt_setting_toggle_height"
        android:background="@drawable/switch_selector"
        android:focusable="true"
        android:gravity="center"
        android:nextFocusLeft="@id/upside_down_switch"
        android:nextFocusRight="@id/hide_nav_switch"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@id/guideline33"
        app:layout_constraintEnd_toEndOf="@id/guideline_hor95"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hide_nav_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/label_hide_nav_bar"
        android:textColor="@android:color/white"
        android:textSize="@dimen/brightness_content_font_size"
        app:layout_constraintBottom_toBottomOf="@id/hide_nav_switch"
        app:layout_constraintEnd_toStartOf="@id/hide_nav_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/hide_nav_switch" />

    <ToggleButton
        android:id="@+id/hide_nav_switch"
        android:layout_width="@dimen/bt_setting_toggle_width"
        android:layout_height="@dimen/bt_setting_toggle_height"
        android:background="@drawable/switch_selector"
        android:focusable="true"
        android:gravity="center"
        android:nextFocusLeft="@id/demo_switch"
        android:nextFocusRight="@id/upside_down_switch"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@id/guideline66"
        app:layout_constraintEnd_toEndOf="@+id/guideline_hor95"
        app:layout_constraintTop_toTopOf="@id/guideline33" />


    <TextView
        android:id="@+id/upside_down"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/enable_demo"
        android:focusable="false"
        android:gravity="center"
        android:text="Inverse layout"
        android:textColor="@android:color/white"
        android:textSize="@dimen/brightness_content_font_size"
        app:layout_constraintBottom_toBottomOf="@id/upside_down_switch"
        app:layout_constraintEnd_toStartOf="@id/upside_down_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/upside_down_switch" />

    <ToggleButton
        android:id="@+id/upside_down_switch"
        android:layout_width="@dimen/bt_setting_toggle_width"
        android:layout_height="@dimen/bt_setting_toggle_height"
        android:background="@drawable/switch_selector"
        android:focusable="true"
        android:gravity="center"
        android:nextFocusLeft="@id/hide_nav_switch"
        android:nextFocusRight="@id/demo_switch"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_hor95"
        app:layout_constraintTop_toBottomOf="@id/guideline66" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_hor95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


</android.support.constraint.ConstraintLayout>